#:import hex kivy.utils.get_color_from_hex

<HomeScreen>:
    BoxLayout:
        id: whole_window
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: '30dp'
            canvas.before:
                Color:
                    rgba: hex('#111111')
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: "menu bar"
        BoxLayout:
            Label:
                text: "Content"

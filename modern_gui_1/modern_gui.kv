#:import hex kivy.utils.get_color_from_hex
#:import Window hover_behaviour.Window
<IconButton@Button+HoverBehavior>:
    background_normal: ''
    background_color: hex('#030202f5')
    size_hint_y: None
    height: '100dp'
    font_name: 'fontawesome-free\\fa-solid-900.ttf'
    font_size: '40dp'
<WindowButton@Button>:
    background_normal: ''
    background_color: hex('#030202f5')
    size_hint_x: None
    width: '10dp'
    font_name: 'fontawesome-free\\fa-solid-900.ttf'
<SideBar@ScrollView>:
    size_hint_x: None
    width: '100dp'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        canvas.before:
            Color:
                rgba: hex('#222222')
            Rectangle:
                size: self.size
                pos: self.pos
        IconButton:
            id: icon_button
            text: "\uf015"
            on_enter: app.change_cursor("hand")
            on_enter: self.color = hex('#ffe4c4')
            on_enter: self.background_color = hex('#222244')
            on_enter: self.font_size = '55dp'
            on_leave: app.change_cursor("arrow")

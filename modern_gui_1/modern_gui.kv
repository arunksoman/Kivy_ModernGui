<HomeScreen>:
    
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # BoxLayout For Menu Bar
            canvas.before:
                Color:
                    rgba: hex('#030202f5')
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: '30dp'
            spacing: '5dp'
            BoxLayout:
                size_hint_x: 0.8
            BoxLayout:
                size_hint_x: None
                width: '80dp'
                GridLayout:
                    cols: 3
                    spacing: '15dp'
                    padding: '5dp'
                    WindowButton:
                        text: '\uf13a'
                        font_size: '15dp'
                        on_press: Window.minimize()
                        color: hex('#ffd700')

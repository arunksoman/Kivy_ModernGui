<SideBar@ScrollView>:
    size_hint_x: None
    width: '100dp'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        canvas.before:
            Color:
                rgba: hex('#222222')
            Rectangle:
                size: self.size
                pos: self.pos
        IconButton:
            id: icon_button
            text: "\uf015"
            on_enter: app.change_cursor("hand")

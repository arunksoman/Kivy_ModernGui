<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # BoxLayout For Menu Bar
            canvas.before:
                Color:
                    rgba: hex('#030202f5')
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: '30dp'
            spacing: '10dp'
            BoxLayout:
                size_hint_x: 0.9
            BoxLayout:
                size_hint_x: None
                width: '50dp'
                GridLayout:
                    cols: 3
                    spacing: '15dp'
                    padding: '5dp'
                    WindowButton:
                        text: '\uf13a'
                        font_size: '15dp'
                        on_press: Window.minimize()
                        color: hex('#ffd700')
                    # WindowButton:
                    #     text: '\uf139'
                    #     font_size: '15dp'
                    #     on_press: Window.maximize()
                    #     color: hex('#00ff00')
                    WindowButton:
                        text: '\uf410'
                        font_size: '18dp'
                        on_press: app.stop()
                        color: hex('#ff0000')
                        halign: 'right'
        BoxLayout:
            orientation: 'horizontal'
            SideBar:
                # Sidebar inherits Scroll view as you scene above
                # In order to reduce codes in this BoxLayout and for reusability
                # I shifted Sidebar to above
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: hex('#222222')
                    Rectangle:
                        size: self.size
                        pos: self.pos
            
        
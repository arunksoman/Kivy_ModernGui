#:import hex kivy.utils.get_color_from_hex

<IconButton@Button+HoverBehavior>:
    background_normal: ''
    background_color: hex('#030202f5')
    size_hint_y: None
    height: '100dp'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # BoxLayout For Menu Bar
            canvas.before:
                Color:
                    rgba: hex('#030202f5')
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                size_hint_x: None
                width: '100dp'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    canvas.before:
                        Color:
                            rgba: hex('#222222')
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    IconButton:
                        id: icon_button
                        text: "1"
                        on_enter: root.change_cursor("hand")
                        on_enter: self.background_color = hex('#222244')
                        on_leave: root.change_cursor("arrow")
                        on_leave: self.background_color = hex('#030202f5')
                    IconButton:
                        text: "2"
                        on_enter: root.change_cursor("hand")
                        on_enter: self.background_color = hex('#222244')
                        on_leave: root.change_cursor("arrow")
                        on_leave: self.background_color = hex('#030202f5')
                    IconButton:
                        text: "3"
                        on_enter: root.change_cursor("hand")
                        on_enter: self.background_color = hex('#222244')
                        on_leave: root.change_cursor("arrow")
                        on_leave: self.background_color = hex('#030202f5')
                    IconButton:
                        text: "4"
                        on_enter: root.change_cursor("hand")
                        on_enter: self.background_color = hex('#222244')
                        on_leave: root.change_cursor("arrow")
                        on_leave: self.background_color = hex('#030202f5')
                    IconButton:
                        text: "5"
